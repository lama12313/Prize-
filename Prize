<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scratch Card Reveal</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #f8c291, #e55039);
            font-family: 'Arial', sans-serif;
            margin: 0;
        }
        .scratch-card-container {
            text-align: center;
        }
        .scratch-card {
            width: 300px;
            height: 200px;
            background: #bdc3c7;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            cursor: pointer;
            margin-top: 20px;
        }
        canvas {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2;
        }
        .title {
            font-size: 24px;
            font-weight: bold;
            color: #fff;
            margin-bottom: 10px;
        }
        .prize {
            font-size: 22px;
            font-weight: bold;
            color: #333;
            position: absolute;
            text-align: center;
            width: 90%;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
            z-index: 1;
            direction: rtl; /* Arabic text from right to left */
            font-family: 'Arial', sans-serif;
        }
        .revealed .prize {
            opacity: 1;
        }
    </style>
</head>
<body>
    <div class="scratch-card-container">
        <div class="title">Scratch to see your prize!!</div>
        <div class="scratch-card" id="scratch-card">
            <canvas id="scratch-canvas"></canvas>
            <div class="prize">قهوتكم وحلاكم علينا لباقي أيام الإجازة</div>
        </div>
    </div>

    <script>
        const scratchCard = document.getElementById('scratch-card');
        const scratchCanvas = document.getElementById('scratch-canvas');
        const prizeText = scratchCard.querySelector('.prize');
        const ctx = scratchCanvas.getContext('2d');

        let isScratched = false;
        const canvasWidth = scratchCard.offsetWidth;
        const canvasHeight = scratchCard.offsetHeight;

        // Set canvas dimensions
        scratchCanvas.width = canvasWidth;
        scratchCanvas.height = canvasHeight;

        // Draw scratch layer
        ctx.fillStyle = "#34495e";  // Grey scratch cover
        ctx.fillRect(0, 0, canvasWidth, canvasHeight);

        // Scratch effect
        function scratchEffect(e) {
            if (isScratched) return;

            let mouseX, mouseY;
            if (e.touches) {
                e.preventDefault();  // Prevent screen scrolling
                mouseX = e.touches[0].clientX - scratchCard.offsetLeft;
                mouseY = e.touches[0].clientY - scratchCard.offsetTop;
            } else {
                mouseX = e.clientX - scratchCard.offsetLeft;
                mouseY = e.clientY - scratchCard.offsetTop;
            }

            if (mouseX >= 0 && mouseY >= 0 && mouseX <= canvasWidth && mouseY <= canvasHeight) {
                ctx.clearRect(mouseX - 20, mouseY - 20, 40, 40);
            }
        }

        // Add event listeners
        scratchCard.addEventListener('mousemove', scratchEffect);
        scratchCard.addEventListener('touchmove', scratchEffect, { passive: false });

        // Show the prize text when scratching is done
        scratchCard.addEventListener('click', function() {
            if (!isScratched) {
                scratchCard.classList.add('revealed');
                isScratched = true;
            }
        });
    </script>
</body>
</html>
