<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scratch Card Reveal</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #f8c291, #e55039);
            font-family: 'Arial', sans-serif;
            margin: 0;
        }
        .scratch-card {
            width: 300px;
            height: 200px;
            background: #bdc3c7;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            cursor: pointer;
        }
        canvas {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2;
        }
        .prize {
            font-size: 24px;
            color: #fff;
            font-weight: bold;
            text-align: center;
            position: absolute;
            opacity: 0;
            transition: opacity 1s ease-in-out;
            z-index: 1;
        }
        .revealed canvas {
            pointer-events: none;
        }
        .revealed .prize {
            opacity: 1;
        }
    </style>
</head>
<body>
    <div class="scratch-card" id="scratch-card">
        <canvas id="scratch-canvas"></canvas>
        <div class="prize">üéâ Congratulations! You Won a Prize! üèÜ</div>
    </div>

    <script>
        const scratchCard = document.getElementById('scratch-card');
        const scratchCanvas = document.getElementById('scratch-canvas');
        const prize = scratchCard.querySelector('.prize');
        const ctx = scratchCanvas.getContext('2d');

        let isScratched = false;
        const canvasWidth = scratchCard.offsetWidth;
        const canvasHeight = scratchCard.offsetHeight;

        // Set canvas dimensions
        scratchCanvas.width = canvasWidth;
        scratchCanvas.height = canvasHeight;

        // Draw a "scratchable" layer
        ctx.fillStyle = "#34495e";  // Gray color for the scratch cover
        ctx.fillRect(0, 0, canvasWidth, canvasHeight);

        ctx.fillStyle = "#fff";
        ctx.font = "24px Arial";
        ctx.textAlign = "center";
        ctx.textBaseline = "middle";
        ctx.fillText("Scratch to Reveal Your Prize!", canvasWidth / 2, canvasHeight / 2);

        // Scratch effect
        function scratchEffect(e) {
            if (isScratched) return;

            const rect = scratchCard.getBoundingClientRect();
            const mouseX = e.clientX - rect.left;
            const mouseY = e.clientY - rect.top;

            if (mouseX >= 0 && mouseY >= 0 && mouseX <= canvasWidth && mouseY <= canvasHeight) {
                ctx.clearRect(mouseX - 20, mouseY - 20, 40, 40);  // Clear the scratch area
            }
        }

        // Event listeners
        scratchCard.addEventListener('mousemove', scratchEffect);
        scratchCard.addEventListener('click', function() {
            if (!isScratched) {
                scratchCard.classList.add('revealed');
                isScratched = true;
            }
        });
    </script>
</body>
</html>
