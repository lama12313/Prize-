<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>بطاقة الجائزة</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #f7e7ce, #d4af37); /* Classic Gold & Cream */
            font-family: 'Arial', sans-serif;
            margin: 0;
            overflow: hidden;
        }
        .scratch-card-container {
            text-align: center;
        }
        .title {
            font-size: 26px;
            font-weight: bold;
            color: #5a4a42; /* Elegant Dark Brown */
            margin-bottom: 15px;
        }
        .scratch-card {
            width: 320px;
            height: 200px;
            background: #b5a58d; /* Classic Tan */
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            cursor: pointer;
        }
        canvas {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2;
        }
        .prize {
            font-size: 22px;
            font-weight: bold;
            color: #4a3b30; /* Deep Brown */
            position: absolute;
            text-align: center;
            width: 90%;
            z-index: 1;
            direction: rtl;
            font-family: 'Arial', sans-serif;
        }

        /* Confetti */
        .confetti {
            position: fixed;
            width: 10px;
            height: 10px;
            background-color: gold;
            opacity: 0.8;
            position: absolute;
            animation: fall linear infinite;
        }

        @keyframes fall {
            from { transform: translateY(-10vh) rotate(0deg); }
            to { transform: translateY(100vh) rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="scratch-card-container">
        <div class="title">امسح لترى جائزتك!!</div>
        <div class="scratch-card" id="scratch-card">
            <canvas id="scratch-canvas"></canvas>
            <div class="prize">قهوتكم وحلاكم علينا لباقي أيام الإجازة ☕️🍰</div>
        </div>
    </div>

    <script>
        const scratchCard = document.getElementById('scratch-card');
        const scratchCanvas = document.getElementById('scratch-canvas');
        const ctx = scratchCanvas.getContext('2d');

        const canvasWidth = scratchCard.offsetWidth;
        const canvasHeight = scratchCard.offsetHeight;

        scratchCanvas.width = canvasWidth;
        scratchCanvas.height = canvasHeight;

        // Draw scratch layer
        ctx.fillStyle = "#665e57";  // Scratch Cover - Dark Brown
        ctx.fillRect(0, 0, canvasWidth, canvasHeight);

        function scratchEffect(e) {
            let mouseX, mouseY;
            if (e.touches) {
                e.preventDefault();
                mouseX = e.touches[0].clientX - scratchCard.offsetLeft;
                mouseY = e.touches[0].clientY - scratchCard.offsetTop;
            } else {
                mouseX = e.clientX - scratchCard.offsetLeft;
                mouseY = e.clientY - scratchCard.offsetTop;
            }

            if (mouseX >= 0 && mouseY >= 0 && mouseX <= canvasWidth && mouseY <= canvasHeight) {
                ctx.globalCompositeOperation = "destination-out";
                ctx.beginPath();
                ctx.arc(mouseX, mouseY, 20, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        scratchCard.addEventListener('mousemove', scratchEffect);
        scratchCard.addEventListener('touchmove', scratchEffect, { passive: false });

        // Confetti effect
        function createConfetti() {
            for (let i = 0; i < 100; i++) {
                let confetti = document.createElement("div");
                confetti.classList.add("confetti");
                document.body.appendChild(confetti);

                confetti.style.left = `${Math.random() * 100}vw`;
                confetti.style.backgroundColor = Math.random() < 0.5 ? "#FFD700" : "#E6BE8A"; // Gold & Bronze
                confetti.style.animationDuration = `${Math.random() * 3 + 2}s`;
                confetti.style.animationDelay = `${Math.random()}s`;
            }
        }

        createConfetti();
    </script>
</body>
</html>
